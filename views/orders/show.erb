<div class="info-center">
	<h1>Order No. <%= @order.id %></h1>
	Item: <%= @menu_item.name %><br>
	Price: $ <%= @menu_item.price %><br>
	Comp: <%= @order.price_change_note %> $ <%= @order.price_change %><br>
	Notes: <%= @order.notes %><br>


	<div class="bottom-buttons">
		<a href="/parties/<%= @party.id %>/orders/<%= @order.id %>/edit" class="button">Edit</a>


		<form action="/parties/<%= @party.id %>/orders/<%= @order.id %>" method="post">
			<input type="hidden" name="_method" value="delete">
			<input type="submit" value="Delete" class="button">
		</form>

		<a href="/parties/<%= @party.id %>" class="button">Back to Table</a>
	</div>
</div>